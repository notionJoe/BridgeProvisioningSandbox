<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: Follow organization from styles_material.xml - this is getting silly...perhaps consolidate styles_text, styles_buttons, etc... -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorAccent">@color/notion_teal</item>
        <item name="colorPrimaryDark">@color/notion_dark_grey</item>
        <item name="colorPrimary">@color/notion_white</item>
        <item name="android:colorEdgeEffect" tools:targetApi="21">@color/notion_dark_grey</item>
    </style>

    <style name="NotionEditText" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/notion_teal</item>
        <item name="colorControlActivated">@color/notion_teal</item>
        <item name="colorControlHighlight">@color/notion_teal</item>
    </style>

    <style name="NotionDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/notion_dark_grey</item>
    </style>

    <style name="CollapsibleField">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingStart">30dp</item>
    </style>

    <style name="Notion.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/notion_medium_grey</item>
    </style>

    <style name="Notion.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/notion_teal</item>
        <item name="android:background">@color/notion_light_grey</item>
        <item name="tabBackground">@color/notion_light_grey</item>
        <item name="tabTextAppearance">@style/NotionTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>
    <style name="NotionTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/notion_dark_grey</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
