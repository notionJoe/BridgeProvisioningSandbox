<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Expanded View -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/systemNetworkFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/setup.system.network.description"
            style="@style/label_active"
            />
        <!-- Network Chooser Button-->
        <RelativeLayout
            android:id="@+id/systemNetworkFieldNetworkContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_chooser"
            >
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/systemNetworkFieldNetworkIconTextView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/icon_chooser"
                android:text="@string/icons.chooser"
                />
            <TextView
                android:id="@+id/systemNetworkFieldNetworkChooserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/systemNetworkFieldNetworkIconTextView"
                android:layout_centerInParent="true"
                android:singleLine="true"
                style="@style/field_inactive"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/systemNetworkFieldPasswordLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/setup.system.network.password.label"
            style="@style/label_active"
            />
        <RelativeLayout
            android:id="@+id/systemNetworkFieldPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/systemNetworkFieldPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="44dp"
                android:hint="@string/setup.system.network.password.hint"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                style="@style/field_active"
                />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/eyeIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/icon_chooser"
                android:text="@string/icons.eye.slash"
                android:textColor="@color/notion_medium_grey"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/systemNetworkFieldPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/setup.system.network.password.error"
            style="@style/label_error"
            android:visibility="invisible"
            />
    </LinearLayout>

    <!-- Collapsed View -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        >
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/editIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/icons.edit"
            />
        <TextView
            android:id="@+id/systemNetworkFieldNetworkLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/setup.system.network.label"
            android:singleLine="true"
            style="@style/label_inactive"
            />
        <TextView
            android:id="@+id/systemNetworkFieldNetworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/systemNetworkFieldNetworkLabel"
            android:singleLine="true"
            style="@style/field_inactive"
            />
        <TextView
            android:id="@+id/systemNetworkFieldPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/systemNetworkFieldNetworkTextView"
            android:singleLine="true"
            style="@style/field_inactive"
            />
    </RelativeLayout>
</merge>