<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dialog_vertical_padding">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_horizontal_padding"
        android:paddingRight="@dimen/dialog_horizontal_padding"
        android:paddingBottom="@dimen/dialog_vertical_padding"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_title_font_size"
        android:textColor="@color/notion_white"/>

    <TextView
        android:id="@+id/message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_horizontal_padding"
        android:paddingRight="@dimen/dialog_horizontal_padding"
        android:paddingBottom="@dimen/dialog_vertical_padding"
        android:textSize="@dimen/dialog_message_font_size"
        android:textColor="@color/notion_white"/>

    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider_size"
        android:background="@color/notion_trans_30_white"/>

    <RelativeLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_container_height">

        <View
            android:id="@+id/vertical_divider"
            android:layout_width="@dimen/dialog_divider_size"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/notion_trans_30_white"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/vertical_divider"
            android:background="@drawable/rect_button_dark_grey"
            android:textColor="@color/notion_white"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/vertical_divider"
            android:background="@drawable/rect_button_dark_grey"
            android:textColor="@color/notion_white"/>

    </RelativeLayout>

</LinearLayout>